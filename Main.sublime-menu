[
    {
        "id": "preferences",
        "children":
        [
            {
                // Include this information in case it is the only package using that menu
                "caption": "Package Settings",
                "mnemonic": "P",
                "id": "package-settings",
                "children":
                [
                    {
                        "caption": "CSScheme",
                        "id": "csscheme",
                        "children":
                        [
                            // README
                            {
                                "caption": "README.md",
                                "command": "open_file",
                                "args": {"file": "${packages}/CSScheme/README.md"}
                            },
                            { "caption": "-"},
                            // Settings - Default
                            {
                                "caption": "Settings – Default",
                                "command": "open_file",
                                "args": {"file": "${packages}/CSScheme/csscheme.sublime-settings"}
                            },
                            // Settings - User
                            {
                                "caption": "Settings – User",
                                "command": "open_file",
                                "args": {"file": "${packages}/User/csscheme.sublime-settings"}
                            }
                        ]
                    }
                ]
            }
        ]
    }
]
